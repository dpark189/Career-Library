<%= form_for [@video] do |f| %>
<div class='column column-block'>
  <% if @video.errors.any? %>
    <div id="error_explanation-videos">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
  <div class="video-title">
    <%= f.label :name, 'Title' %>
    <div class="video-title input">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="video-embbed_code">
    <%= f.label :embbed_code, "Youtube video id 'youtu.be/****' " %>
    <div class="video-embbed_code input">
      <%= f.text_field :embbed_code %>
    </div>
  </div>
<%= f.hidden_field :career_id, :value => @id %>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'button' %>
  </div>
<% end %>
</div>
</div>
