<br>
<h2 class='sign-up'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<style>
  label {
    display: block;
  }

  .hint {
    display: block;
    font-size: 10px;
  }

</style>
  <div class="add-form-inputs", style="text-align: center;">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
    <%= f.input :email, label: 'Email', required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
<br>
  <div class="form-actions", style="text-align: center;">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>
</div>
