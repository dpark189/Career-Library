<br>
<h2 class='sign-up'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<style>

  input[class="password required"] {
    margin-left: 10px;
    width: 130px;
      box-sizing: border-box;
      border: 2px solid #ccc;
      border-radius: 3px;
      font-size: 16px;
      background-color: white;
      background-position: 10px 10px;
      background-repeat: no-repeat;
      -webkit-transition: width 0.4s ease-in-out;
      transition: width 0.4s ease-in-out;
  }
  label {
    display: block;
  }

  .hint {
    display: block;
    font-size: 10px;
  }

</style>
  <div class="add-form-inputs", style="text-align: center;">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
    <%= f.input :email, label: 'Email', required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>

  <div class="form-actions", style="text-align: center;">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>
</div>
