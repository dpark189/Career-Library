<br>
<h2 class='sign-up'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<style>
  label {
    display: block;
  }

  div[class="form-inputs"] {
    position: absolute;
      width: 500px;
      border: 5px solid black;
      background-color: rgba(255, 255, 255, 0.7);
      padding-bottom: 10px;
  }

  .hint {
    display: block;
    font-size: 10px;
  }

</style>
  <div class="form-inputs", style="text-align: center;">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
    <%= f.input :username, label: 'Username', required: true, autofocus: true %>
    <%= f.input :email, label: 'Email', required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %><br>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
    <div>
      <%= f.input :profile_photo, type: :file, required: true %><br>
    </div>

  <div class="form-actions", style="text-align: center;">
    <%= f.button :submit, "Sign Up" %>
  </div>
<% end %>
</div>
